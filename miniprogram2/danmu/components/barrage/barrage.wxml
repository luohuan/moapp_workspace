<view class='container'>
  <block wx:for="{{danmus}}" wx:key="suoyin">
    <view wx:if="{{item.show}}" class='danmu' style='animation: 10s {{item.delay}}s test  linear both;animation-fill-mode: both;top:{{item.top}}rpx;{{danmuStyle}};height:{{danmuHeight}}rpx;font-size:{{danmuFontSize}}rpx;line-height:{{danmuLineHeight}}rpx;background:{{danmuBackground}};'>{{item.text}}
      <image class='avatar' style='{{danmuAvatarStyle}}' src='{{item.avatarUrl}}'></image>
      <image class='tailImage' style="{{danmuTailImageStyle}}" src='{{danmuTailImage}}'></image>
      <image class='headImage' style="{{danmuHeadImageStyle}}" src='{{danmuHeadImage}}'></image>

    </view>
  </block>
</view>
